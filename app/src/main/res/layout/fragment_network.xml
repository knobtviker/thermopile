<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_title_bluetooth"
            style="@style/Section"
            android:text="Bluetooth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Switch
            android:id="@+id/switch_bluetooth_on_off"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:enabled="false"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="Off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_title_bluetooth"/>

        <ProgressBar
            android:id="@+id/progressbar_bluetooth"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch_bluetooth_on_off"/>

        <Switch
            android:id="@+id/switch_bluetooth_gatt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:enabled="false"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="GATT server"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressbar_bluetooth"/>

        <Switch
            android:id="@+id/switch_bluetooth_advertising"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:enabled="false"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="Advertising"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch_bluetooth_gatt"/>

        <View
            android:id="@+id/divider_bluetooth"
            style="@style/Divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch_bluetooth_advertising"/>

        <android.support.constraint.Group
            android:id="@+id/group_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textview_title_bluetooth, switch_bluetooth_on_off, divider_bluetooth"/>

        <android.support.constraint.Group
            android:id="@+id/group_gatt_advertising"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="switch_bluetooth_gatt, switch_bluetooth_advertising"/>

        <TextView
            android:id="@+id/textview_title_wifi"
            style="@style/Section"
            android:text="WiFi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_bluetooth"/>

        <Switch
            android:id="@+id/switch_wifi_on_off"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:enabled="false"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="Off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_title_wifi"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_wifi_connected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:minHeight="?attr/listPreferredItemHeightSmall"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch_wifi_on_off">

            <ImageView
                android:id="@+id/imageview_arrow_next"
                android:src="@drawable/ic_arrow_next"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_wifi_ssid"
                android:layout_width="0dp"
                tools:text="Knobtviker"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageview_arrow_next"
                app:layout_constraintBottom_toTopOf="@+id/textview_ip"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/textview_ip"
                android:layout_width="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="?android:textColorSecondary"
                app:layout_constraintTop_toBottomOf="@id/textview_wifi_ssid"
                app:layout_constraintEnd_toStartOf="@id/imageview_arrow_next"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                tools:text="192.168.1.244"
                android:layout_height="0dp"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/divider_wifi"
            style="@style/Divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_wifi_connected"/>

        <android.support.constraint.Group
            android:id="@+id/group_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textview_title_wifi, switch_wifi_on_off, layout_wifi_connected, divider_wifi"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>