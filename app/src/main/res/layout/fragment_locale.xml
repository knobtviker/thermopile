<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Timezone"/>

                <Spinner
                    android:id="@+id/spinner_timezone"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/listPreferredItemHeightSmall"
                    android:layout_marginTop="@dimen/margin_small"
                    android:spinnerMode="dialog"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Clock mode"/>

                <android.support.design.chip.ChipGroup
                    android:id="@+id/radiogroup_clock_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <android.support.design.chip.Chip
                        android:id="@+id/mode_12h"
                        app:chipBackgroundColor="@drawable/background_chip_choice"
                        app:chipStrokeColor="?android:textColorPrimary"
                        app:chipStrokeWidth="1dp"
                        app:chipEndPadding="32dp"
                        app:chipStartPadding="32dp"
                        style="@style/Widget.Chip.Choice"
                        android:text="12h"/>

                    <android.support.design.chip.Chip
                        android:id="@+id/mode_24h"
                        app:chipBackgroundColor="@drawable/background_chip_choice"
                        app:chipStrokeColor="?android:textColorPrimary"
                        app:chipStrokeWidth="1dp"
                        app:chipEndPadding="32dp"
                        app:chipStartPadding="32dp"
                        style="@style/Widget.Chip.Choice"
                        android:text="24h"/>

                </android.support.design.chip.ChipGroup>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Date format"/>

                <Spinner
                    android:id="@+id/spinner_date_format"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/listPreferredItemHeightSmall"
                    android:layout_marginTop="@dimen/margin_small"
                    android:spinnerMode="dialog"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Time format"/>

                <Spinner
                    android:id="@+id/spinner_time_format"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/listPreferredItemHeightSmall"
                    android:layout_marginTop="@dimen/margin_small"
                    android:spinnerMode="dialog"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>