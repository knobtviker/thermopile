<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Temperature"/>

                <com.knobtviker.thermopile.presentation.views.MaterialToggleGroup
                    android:id="@+id/radiogroup_temperature_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:weightSum="3">

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_celsius"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="Celsius"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_farenheit"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="Fahrenheit"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_kelvin"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="Kelvin"/>

                </com.knobtviker.thermopile.presentation.views.MaterialToggleGroup>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Pressure"/>

                <com.knobtviker.thermopile.presentation.views.MaterialToggleGroup
                    android:id="@+id/radiogroup_pressure_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_pascal"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="@string/unit_pressure_pascal"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_bar"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="@string/unit_pressure_bar"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_psi"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="@string/unit_pressure_psi"/>

                </com.knobtviker.thermopile.presentation.views.MaterialToggleGroup>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Motion"/>

                <com.knobtviker.thermopile.presentation.views.MaterialToggleGroup
                    android:id="@+id/radiogroup_acceleration_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_ms2"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="@string/unit_acceleration_ms2"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_g"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="@string/unit_acceleration_g"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_gal"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="@string/unit_acceleration_gal"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/unit_cms2"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="@string/unit_acceleration_cms2"/>

                </com.knobtviker.thermopile.presentation.views.MaterialToggleGroup>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>