<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="0dp"
        android:background="@color/background_appbar"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageButton
                android:id="@+id/button_back"
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="?attr/homeAsUpIndicator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                style="@style/TextAppearance.Title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/label_schedule"
                tools:text="Schedule"/>

            <ImageButton
                android:id="@+id/button_add"
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/appbar_layout_shadow"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/shadow_slice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout_shadow">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_days"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="@dimen/guideline_schedule"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textview_day_monday"
            style="@style/TextAppearance.Schedule.Day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Monday"
            app:layout_constraintBottom_toTopOf="@+id/divider_monday"
            app:layout_constraintEnd_toStartOf="@id/guideline_days"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="spread"/>

        <View
            android:id="@+id/divider_monday"
            style="@style/Widget.Divider.Schedule"
            app:layout_constraintBottom_toTopOf="@+id/textview_day_tuesday"
            app:layout_constraintTop_toBottomOf="@+id/textview_day_monday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_day_tuesday"
            style="@style/TextAppearance.Schedule.Day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Tuesday"
            app:layout_constraintBottom_toTopOf="@+id/divider_tuesday"
            app:layout_constraintEnd_toStartOf="@id/guideline_days"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_monday"
            app:layout_constraintWidth_default="spread"/>

        <View
            android:id="@+id/divider_tuesday"
            style="@style/Widget.Divider.Schedule"
            app:layout_constraintBottom_toTopOf="@+id/textview_day_wednesday"
            app:layout_constraintTop_toBottomOf="@+id/textview_day_tuesday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_day_wednesday"
            style="@style/TextAppearance.Schedule.Day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Wednesday"
            app:layout_constraintBottom_toTopOf="@+id/divider_wednesday"
            app:layout_constraintEnd_toStartOf="@id/guideline_days"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_tuesday"
            app:layout_constraintWidth_default="spread"/>

        <View
            android:id="@+id/divider_wednesday"
            style="@style/Widget.Divider.Schedule"
            app:layout_constraintBottom_toTopOf="@+id/textview_day_thursday"
            app:layout_constraintTop_toBottomOf="@+id/textview_day_wednesday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_day_thursday"
            style="@style/TextAppearance.Schedule.Day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Thursday"
            app:layout_constraintBottom_toTopOf="@+id/divider_thursday"
            app:layout_constraintEnd_toStartOf="@id/guideline_days"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_wednesday"
            app:layout_constraintWidth_default="spread"/>

        <View
            android:id="@+id/divider_thursday"
            style="@style/Widget.Divider.Schedule"
            app:layout_constraintBottom_toTopOf="@+id/textview_day_friday"
            app:layout_constraintTop_toBottomOf="@+id/textview_day_thursday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_day_friday"
            style="@style/TextAppearance.Schedule.Day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Friday"
            app:layout_constraintBottom_toTopOf="@+id/divider_friday"
            app:layout_constraintEnd_toStartOf="@id/guideline_days"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_thursday"
            app:layout_constraintWidth_default="spread"/>

        <View
            android:id="@+id/divider_friday"
            style="@style/Widget.Divider.Schedule"
            app:layout_constraintBottom_toTopOf="@+id/textview_day_saturday"
            app:layout_constraintTop_toBottomOf="@+id/textview_day_friday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_day_saturday"
            style="@style/TextAppearance.Schedule.Day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Saturday"
            app:layout_constraintBottom_toTopOf="@+id/divider_saturday"
            app:layout_constraintEnd_toStartOf="@id/guideline_days"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_friday"
            app:layout_constraintWidth_default="spread"/>

        <View
            android:id="@+id/divider_saturday"
            style="@style/Widget.Divider.Schedule"
            app:layout_constraintBottom_toTopOf="@+id/textview_day_sunday"
            app:layout_constraintTop_toBottomOf="@+id/textview_day_saturday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_day_sunday"
            style="@style/TextAppearance.Schedule.Day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Sunday"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_days"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_saturday"
            app:layout_constraintWidth_default="spread"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_hours_monday"
            style="@style/Widget.Schedule.DayHours"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_day_monday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/guideline_days"
            app:layout_constraintTop_toTopOf="@id/textview_day_monday"
            app:layout_constraintWidth_default="spread"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_hours_tuesday"
            style="@style/Widget.Schedule.DayHours"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_day_tuesday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/guideline_days"
            app:layout_constraintTop_toTopOf="@id/textview_day_tuesday"
            app:layout_constraintWidth_default="spread"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_hours_wednesday"
            style="@style/Widget.Schedule.DayHours"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_day_wednesday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/guideline_days"
            app:layout_constraintTop_toTopOf="@id/textview_day_wednesday"
            app:layout_constraintWidth_default="spread"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_hours_thursday"
            style="@style/Widget.Schedule.DayHours"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_day_thursday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/guideline_days"
            app:layout_constraintTop_toTopOf="@id/textview_day_thursday"
            app:layout_constraintWidth_default="spread"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_hours_friday"
            style="@style/Widget.Schedule.DayHours"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_day_friday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/guideline_days"
            app:layout_constraintTop_toTopOf="@id/textview_day_friday"
            app:layout_constraintWidth_default="spread"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_hours_saturday"
            style="@style/Widget.Schedule.DayHours"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_day_saturday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/guideline_days"
            app:layout_constraintTop_toTopOf="@id/textview_day_saturday"
            app:layout_constraintWidth_default="spread"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_hours_sunday"
            style="@style/Widget.Schedule.DayHours"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_day_sunday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/guideline_days"
            app:layout_constraintTop_toTopOf="@id/textview_day_sunday"
            app:layout_constraintWidth_default="spread"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>