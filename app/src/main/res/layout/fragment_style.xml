<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Theme"/>

                <com.knobtviker.thermopile.presentation.views.MaterialToggleGroup
                    android:id="@+id/radiogroup_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/light"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="Light"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/dark"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="Dark"/>

                    <com.knobtviker.thermopile.presentation.views.MaterialToggleButton
                        android:id="@+id/automatic"
                        style="@style/Widget.MaterialToggleButton"
                        android:text="Automatic"/>

                </com.knobtviker.thermopile.presentation.views.MaterialToggleGroup>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Section"
                    android:text="Screensaver timeout"/>

                <Spinner
                    android:id="@+id/spinner_timeout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/listPreferredItemHeightSmall"
                    android:layout_marginTop="@dimen/margin_small"
                    android:spinnerMode="dialog"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>