<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.knobtviker.thermopile.presentation.fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_chartsFragment"
            app:destination="@id/chartsFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_right_to_left"
            app:popEnterAnim="@anim/enter_right_to_left"
            app:popExitAnim="@anim/exit_right_to_left"/>
        <action
            android:id="@+id/action_mainFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_right_to_left"
            app:popEnterAnim="@anim/enter_right_to_left"
            app:popExitAnim="@anim/exit_right_to_left"/>
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_right_to_left"
            app:popEnterAnim="@anim/enter_right_to_left"
            app:popExitAnim="@anim/exit_right_to_left"/>
    </fragment>
    <fragment
        android:id="@+id/chartsFragment"
        android:name="com.knobtviker.thermopile.presentation.fragments.ChartsFragment"
        android:label="ChartsFragment"
        tools:layout="@layout/fragment_charts">
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.knobtviker.thermopile.presentation.fragments.ScheduleFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/showThresholdByIdAction"
            app:destination="@id/thresholdFragment"
            app:enterAnim="@anim/enter_bottom_to_top"
            app:exitAnim="@anim/exit_top_to_bottom"
            app:popEnterAnim="@anim/enter_bottom_to_top"
            app:popExitAnim="@anim/exit_top_to_bottom"/>
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.knobtviker.thermopile.presentation.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
    </fragment>
    <fragment
        android:id="@+id/thresholdFragment"
        android:name="com.knobtviker.thermopile.presentation.fragments.ThresholdFragment"
        android:label="ThresholdFragment"
        tools:layout="@layout/fragment_threshold">
        <argument
            android:name="thresholdId"
            android:defaultValue="-1L"
            app:type="long"/>
        <argument
            android:name="day"
            android:defaultValue="-1"
            app:type="integer"/>
        <argument
            android:name="startMinute"
            android:defaultValue="-1"
            app:type="integer"/>
        <argument
            android:name="maxWidth"
            android:defaultValue="-1"
            app:type="integer"/>
    </fragment>

</navigation>