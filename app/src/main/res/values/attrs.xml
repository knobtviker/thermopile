<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ArcView">
        <attr name="progress" format="float"/>
        <attr name="progressColor" format="color"/>
        <attr name="trackColor" format="color"/>
        <attr name="stroke_thickness" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircularSeekBar">
        <attr name="progress_" format="integer"/>
        <attr name="min" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="move_outside_circle" format="boolean"/>
        <attr name="maintain_equal_circle" format="boolean"/>
        <attr name="use_custom_radii" format="boolean"/>
        <attr name="lock_enabled" format="boolean"/>
        <attr name="circle_x_radius" format="dimension" />
        <attr name="circle_y_radius" format="dimension" />
        <attr name="circle_stroke_width" format="dimension" />
        <attr name="pointer_radius" format="dimension" />
        <attr name="pointer_halo_width" format="dimension" />
        <attr name="pointer_halo_border_width" format="dimension"/>
        <attr name="circle_progress_color" format="color"/>
        <attr name="pointer_color" format="color"/>
        <attr name="pointer_halo_color" format="color"/>
        <attr name="pointer_halo_color_ontouch" format="color"/>
        <attr name="pointer_alpha_ontouch" format="integer"/>
        <attr name="start_angle" format="float"/>
        <attr name="end_angle" format="float"/>
        <attr name="circle_fill" format="color"/>
    </declare-styleable>

    <declare-styleable name="DiscreteSeekBar">
        <attr name="discrete_unit" format="string"/>
        <attr name="discrete_min" format="float|reference"/> <!--min < max, default: 0.0f-->
        <attr name="discrete_max" format="float|reference"/> <!--min < max, default: 100.0f-->
        <attr name="discrete_progress" format="float|reference"/> <!--real time progress value, default: min-->
        <attr name="discrete_is_float_type" format="boolean"/> <!--support for float type-->
        <attr name="discrete_track_size" format="dimension|reference"/> <!--height of right-track(on the right of thumb), default: 2dp-->
        <!--height of left-track(on the left of thumb), default: 2dp higher than right-track's height-->
        <attr name="discrete_second_track_size" format="dimension|reference"/>
        <attr name="discrete_thumb_radius" format="dimension|reference"/> <!--radius of thumb, default: 2dp higher than left-track's height-->
        <!--radius of thumb when be dragging, default: 2 times of left-track's height-->
        <attr name="discrete_thumb_radius_on_dragging" format="dimension|reference"/>
        <attr name="discrete_track_color" format="color|reference"/> <!--color of right-track, default: R.color.colorPrimary-->
        <attr name="discrete_second_track_color" format="color|reference"/> <!--color of left-track, default: R.color.colorAccent-->
        <attr name="discrete_thumb_color" format="color|reference"/> <!--color of thumb, default: same as left-track's color-->
        <attr name="discrete_section_count" format="integer|reference"/> <!--shares of whole progress(max - min), default: 10-->
        <attr name="discrete_show_section_mark" format="boolean"/> <!--show demarcation points or not, default: false-->
        <attr name="discrete_auto_adjust_section_mark" format="boolean"/> <!--auto scroll to the nearest section_mark or not, default: false-->
        <attr name="discrete_show_section_text" format="boolean"/> <!--show section-text or not, default: false-->
        <attr name="discrete_section_text_size" format="dimension|reference"/> <!--text size of section-text, default: 14sp-->
        <attr name="discrete_section_text_color" format="color|reference"/> <!--text color of section-text, default: same as right-track's color-->
        <!--text position of section-text relative to track, sides, bottom_sides, below_section_mark, default: sides-->
        <attr name="discrete_section_text_position">
            <enum name="sides" value="0"/>
            <enum name="bottom_sides" value="1"/>
            <enum name="below_section_mark" value="2"/>
        </attr>
        <attr name="discrete_section_text_interval" format="integer"/> <!--the interval of two section-text, default: 1-->
        <attr name="discrete_show_thumb_text" format="boolean"/> <!--show real time progress-text under thumb or not, default: false-->
        <attr name="discrete_thumb_text_size" format="dimension|reference"/> <!--text size of progress-text, default: 14sp-->
        <attr name="discrete_thumb_text_color" format="color|reference"/> <!--text color of progress-text, default: same as left-track's color-->
        <attr name="discrete_show_progress_in_float" format="boolean"/> <!--show bubble-progress in float or not, default: false-->
        <attr name="discrete_touch_to_seek" format="boolean"/> <!--touch anywhere on track to quickly seek, default: false-->
        <attr name="discrete_seek_step_section" format="boolean"/> <!--seek one step by one section, the progress is discrete, default: false-->
        <attr name="discrete_seek_by_section" format="boolean"/> <!--seek by section, the progress may not be linear, default: false-->
        <attr name="discrete_bubble_color" format="color|reference"/> <!--color of bubble, default: same as left-track's color-->
        <attr name="discrete_bubble_text_size" format="dimension|reference"/> <!--text size of bubble-progress, default: 14sp-->
        <attr name="discrete_bubble_text_color" format="color|reference"/> <!--text color of bubble-progress, default: #ffffffff-->
        <attr name="discrete_anim_duration" format="integer"/> <!--duration of animation, default: 200ms-->
        <attr name="discrete_always_show_bubble" format="boolean"/> <!--bubble shows all time, default: false-->
        <attr name="discrete_always_show_bubble_delay" format="integer"/> <!--the delay duration before bubble shows all the time, default: 200ms-->
        <attr name="discrete_hide_bubble" format="boolean"/> <!--hide bubble, default: false-->
        <attr name="discrete_rtl" format="boolean"/> <!--right to left, default: false-->
    </declare-styleable>

    <declare-styleable name="FadingEdgeLayout">
        <attr name="fel_edge" format="integer">
            <flag name="top" value="1"/>
            <flag name="bottom" value="2"/>
            <flag name="left" value="4"/>
            <flag name="right" value="8"/>
        </attr>
        <attr name="fel_size_top" format="dimension"/>
        <attr name="fel_size_bottom" format="dimension"/>
        <attr name="fel_size_left" format="dimension"/>
        <attr name="fel_size_right" format="dimension"/>
    </declare-styleable>

</resources>
