    <style name="TextAppearance.Item.Day" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="TextAppearance.Item.ThresholdTemperature" parent="TextAppearance.MaterialComponents.Caption">
