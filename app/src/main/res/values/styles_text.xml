        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="TextAppearance.Data.Secondary.Unit" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="TextAppearance.Data.Secondary" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="TextAppearance.Data.Primary" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
