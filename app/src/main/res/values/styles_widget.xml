<resources>

    <style name="Widget.Schedule.DayHours" parent="android:Widget">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_border_bottom</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?android:windowBackground</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Item.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Item.BottomNavigationView.Inactive</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@drawable/selector_bottomnavigation_icon_tint</item>
        <item name="itemTextColor">@drawable/selector_bottomnavigation_text_color</item>
    </style>

    <style name="Widget.Button.Action" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_width">?attr/listPreferredItemHeightSmall</item>
        <item name="android:layout_height">?attr/listPreferredItemHeightSmall</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Chip</item>
    </style>

</resources>
