<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/dark_gray</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:hapticFeedbackEnabled">false</item>
    </style>

    <style name="TextAppearance.Schedule.Day" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="Widget.Schedule.DayHours" parent="android:Widget">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="TextAppearance.Date" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextAppearance.Time" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextAppearance.Data.Primary.Unit" parent="TextAppearance.AppCompat.Display2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="TextAppearance.Data.Secondary.Unit" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="TextAppearance.Data.Secondary" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextAppearance.Data.Primary" parent="TextAppearance.AppCompat.Display2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
    </style>

    <style name="TextAppearance.Item.Day" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="TextAppearance.Item.ThresholdTemperature" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">@dimen/height_threshold</item>
        <item name="android:layout_height">@dimen/height_threshold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
    </style>

    <style name="Widget.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/textcolor_radiobutton</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_height">@dimen/height_radiobutton</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.RadioButton.Left" parent="Widget.RadioButton">
        <item name="android:background">@drawable/background_radiobutton_left</item>
    </style>

    <style name="Widget.RadioButton.Middle" parent="Widget.RadioButton">
        <item name="android:background">@drawable/background_radiobutton_middle</item>
    </style>

    <style name="Widget.RadioButton.Right" parent="Widget.RadioButton">
        <item name="android:background">@drawable/background_radiobutton_right</item>
    </style>

    <style name="Widget.Divider.Settings" parent="Widget.Divider">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="Widget.Divider.Schedule" parent="Widget.Divider">
    </style>

    <style name="Widget.Divider" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/background_divider</item>
    </style>

    <style name="TextAppearance.Section" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
